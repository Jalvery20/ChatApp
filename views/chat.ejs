<link rel="stylesheet" href="css/chat.css">
<script src="js/jquery.js"></script>
<script src="js/4.js"></script>

</head>
<body>
    <span style="display: none;" ><%=send._id%></span>
    <div class="chat-container m-auto  co-shadow">
        <header class="container-fluid  p-3 text-shadow co-shadow text-white">
            <div class="row">
                <div class="col-12 pl-4 text-center"><h4>üê¨My Chat</h4></div>
                <div  class="col-12 text-center"><%if(locals.send){%><h4> Welcome <span id="user" class="text-warning"><%=send.username%></span> </h4></div><%}%>
                  
            </div>
            
        </header>
        
        <div class="chat-section ">
            <div class="main-wrapper p-3">
                <div class="chat-content">
                    <h4 id="textWho" class="text-center text-warning text-shadow mb-2">Everybody`s Group</h4>
                    <div class="message">
                        
                             
                        </div>
                        
                    </div>
                    
                </div>
                     
    </div>
    <div id="btnCont" class="row">
    <button id="collbtn"  data-toggle="collapse" data-target="#actives" class="col-6 btn btn-dark text-warning text-shadow">Active Users</button>
    </div>
    <div  id="actives" style="position: absolute;" class="collapse bg-dark text-white">
        <p>üò¢There is no active users!</p> 
        </div > 
      
    <form class="msg-tex">
        <input type="text" name="msg" id="msg" class="co-shadow" placeholder="Type Message Here..." autocomplete="off">
        <button id="sendMsg"  class="btn btn-outline-dark co-shadow">
            <i id="chat-icon" class="bi bi-chat-fill text-warning text-shadow"> Send</i>
        </button>
    </form>
    <div id="store"></div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/chat.js"></script>
